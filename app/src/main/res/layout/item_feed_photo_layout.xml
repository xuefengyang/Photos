<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.yooyor.photo.view.TimeLineView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="8dp">

                <TextView
                    android:id="@+id/photo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="相册名册" />

                <TextView
                    android:id="@+id/photo_participant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/photo_name"
                    android:text="Text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/photo_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/photo_participant"
                    android:layout_marginLeft="32dp"
                    android:layout_toRightOf="@id/photo_participant"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </RelativeLayout>

            <com.yooyor.photo.view.FeedImageWrapperLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.yooyor.photo.view.FeedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/t1"
                    android:visibility="gone"
                    />

                <com.yooyor.photo.view.FeedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/side_nav_bar"/>

                <com.yooyor.photo.view.FeedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/t1" />

                <com.yooyor.photo.view.FeedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/t1" />
                <com.yooyor.photo.view.FeedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/t1" />

                <com.yooyor.photo.view.FeedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/t1" />
                <com.yooyor.photo.view.FeedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/t1" />

                <com.yooyor.photo.view.FeedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/t1"
                    android:visibility="gone"
                    />
                <com.yooyor.photo.view.FeedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/t1" />

                <com.yooyor.photo.view.FeedImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/t1" />

            </com.yooyor.photo.view.FeedImageWrapperLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
